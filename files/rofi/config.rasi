configuration {
  /* fullscreen config */
  fullscreen: true;
  dpi: 1;
  width: 50;
  lines: 50;
  columns: 1;
  location: 0;
  padding: 5;
  yoffset: 0;
  xoffset: 0;
  fixed-num-lines: true;

  modi: "combi,window,run,ssh";
  combi-modi: "window,drun,ssh";

  /*theme: "Arc-Dark";*/
  theme: "zero";
  show-icons: true;
  font: "Inconsolata 16";

  tokenize: true;
  m: -5;  /* -5 == select the monitor that has the mouse pointer */
}
